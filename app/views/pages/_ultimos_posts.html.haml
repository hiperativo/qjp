- for coluna in @colunas do
	.coluna
		- unless coluna.artigos.empty?
			.row
				.span12
					%h2
						= coluna.name
						%small
							- @dias_criado = (Time.now - coluna.created_at).divmod(60*60*24)[0]
							- if @dias_criado > 0
								atualizada #{l coluna.created_at, format: "%A"}, há #{@dias_criado} dias atrás.
							- else 
								atualizada hoje.

			- @artigo = coluna.artigos.first
			.row
				= image_tag @artigo.imagem_url(:small), :class => "span4 imagem-da-coluna"
				
				.span6.ultimo-post
					%h5.chapeu= @artigo.assunto
					%h4.chamada= @artigo.chamada

					:markdown
						#{@artigo.resumo} **(por Fulano de Tal)**
					
					= link_to "Ler tudo", "#{coluna.name}/#{@artigo.chamada.parameterize}", :class => "btn"